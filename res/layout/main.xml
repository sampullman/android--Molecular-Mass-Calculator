<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
  <TextView
      android:id="@+id/title"
      android:textSize="26sp"
      android:layout_height="50dp"
      android:layout_width="match_parent"
      android:gravity="center"
      android:text="Enter a Molecular Formula" />
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="65dp"
      android:weightSum="1.0">
    <EditText
	android:id="@+id/input"
	android:textSize="25sp"
	android:layout_height="match_parent"
	android:layout_width="0dp"
	android:singleLine="true"
	android:paddingLeft="10dp"
	android:layout_margin="5dp"
	android:imeOptions="actionDone"
	android:background="@drawable/input"
	android:layout_weight="0.75"
	android:text="" />
    <Button
	android:id="@+id/clear"
	android:layout_width="0dp"
	android:layout_height="match_parent"
	android:layout_weight="0.25"
	android:textSize="17sp"
	android:background="@drawable/btn_light"
	android:text="Clear" />
  </LinearLayout>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:weightSum="1" >
    <TextView
	android:id="@+id/spc1"
	android:layout_height="match_parent"
	android:layout_width="0dp"
	android:layout_gravity="center_vertical|center_horizontal"
	android:layout_weight="0.15"
	android:text="" />
    <Button
	android:id="@+id/percent"
	android:layout_width="0dp"
	android:layout_height="match_parent"
	android:layout_weight="0.3"
	android:textSize="17sp"
	android:background="@drawable/btn_light"
	android:text="Mass %"
	android:visibility="invisible" />
    <Button
	android:id="@+id/calc"
	android:layout_width="0dp"
	android:layout_height="match_parent"
	android:layout_weight="0.3"
	android:background="@drawable/btn_light"
	android:textSize="17sp"
	android:text="Calculate" />
    <TextView
	android:id="@+id/spc2"
	android:layout_height="match_parent"
	android:layout_width="0dp"
	android:layout_gravity="center_vertical|center_horizontal"
	android:layout_weight="0.25"
	android:text="" />
  </LinearLayout>
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >
    <include layout="@layout/ad_space"/>
  </LinearLayout>
  <LinearLayout
      android:id="@+id/result_holder"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="140dp"
      android:visibility="gone"
      android:paddingTop="15dp"
      android:paddingLeft="10dp"
      android:background="@drawable/results"
      android:weightSum="1.0">
    <LinearLayout
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="0dp"
	android:layout_weight="0.4"
	android:weightSum="1" >
      <TextView
	  android:id="@+id/resText1"
	  android:textSize="24sp"
	  android:layout_height="match_parent"
	  android:layout_width="0dp"
	  android:gravity="center_vertical|right"
	  android:layout_weight="0.25"
	  android:text="Mass:" />
      <TextView
	  android:id="@+id/result"
	  android:textSize="28sp"
	  android:layout_height="match_parent"
	  android:layout_width="0dp"
	  android:layout_gravity="center"
	  android:gravity="center"
	  android:paddingLeft="10dp"
	  android:layout_weight="0.5"
	  android:text="" />
      <TextView
	  android:id="@+id/resText2"
	  android:textSize="20sp"
	  android:layout_height="match_parent"
	  android:layout_width="0dp"
	  android:gravity="center_vertical|left"
	  android:layout_weight="0.25"
	  android:text="g/mol" />
    </LinearLayout>
    <LinearLayout
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="0dp"
	android:layout_weight="0.6"
	android:weightSum="1.0" >
      <TextView
	  android:id="@+id/form_text"
	  android:layout_height="match_parent"
	  android:layout_width="0dp"
	  android:gravity="center"
	  android:layout_weight="0.45"
	  android:textSize="18sp"
	  android:text="Formula name:" />
      <TextView
	  android:id="@+id/form_name"
	  android:layout_height="match_parent"
	  android:layout_width="0dp"
	  android:layout_gravity="center"
	  android:gravity="center_vertical|left"
	  android:paddingLeft="5dp"
	  android:layout_weight="0.55"
	  android:textSize="18sp"
	  android:text="" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>

